<monitor-rules>
	<rule id="demo1">
		<metric-item type="id">
			f5-2400-1-dianping-com:2400-1-dianping-com:1/1-1-in
		</metric-item>
		<metric-item type="regex">
			switch\w*:\w*:\w*in\w*
		</metric-item>
		
		<config starttime="00:00" endtime="24:00">
			<condition>
				<subcondition type="1">40</subcondition>
				<subcondition type="1">40</subcondition>
			</condition>
			<condition>
				<subcondition type="2">200</subcondition>
			</condition>
		</config>
	</rule>
	<rule id="conditionCombination">
		<config starttime="00:00" endtime="24:00">
			<condition>
				<subcondition type="1">400</subcondition>
			</condition>
			<condition>
				<subcondition type="1">400</subcondition>
				<subcondition type="2">900</subcondition>
			</condition>
			<condition>	<!-- trigger alert -->
				<subcondition type="1">40</subcondition>
				<subcondition type="2">100</subcondition>
			</condition>
		</config>
	</rule>
	<rule id="subconditionCombination">
		<config starttime="00:00" endtime="24:00">
			<condition>
				<subcondition type="1">40</subcondition>
				<subcondition type="2">80</subcondition>
				<!-- block alert -->
				<subcondition type="6">10</subcondition>
			</condition>
		</config>
	</rule>
</monitor-rules>
